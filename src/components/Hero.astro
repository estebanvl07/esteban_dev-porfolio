---
import HeroTitle from "./HeroTitle.astro";
---

<main
  id="home"
  class="flex items-center justify-center h-screen max-h-[56rem] bg-[url(/images/background.webp)] bg-no-repeat bg-cover overflow-hidden"
>
  <section
    class="relative flex flex-col md:flex-row items-center justify-center md:justify-between w-full h-full px-8 max-w-[70rem] overflow-hidden"
  >
    <HeroTitle />

    <div
      class="order-1 lg:order-2 z-0 max-w-[32rem] lg:max-w-auto lg:w-full h-full flex items-center md:items-end justify-center md::justify-end md:absolute right-4"
    >
      <img
        src="/images/react.svg"
        class="absolute right-[20rem] lg:right-[24rem] md:bottom-8 levitation-animate-2"
        alt="descripción de la imagen"
      />
      <img
        src="/images/Javascript.svg"
        class="absolute right-16 sm:right-64 lg:right-80 top-32 z-0 levitation-animate"
        alt="descripción de la imagen"
      />
      <img
        src="/images/next.svg"
        class="absolute right-0 bottom-52 z-0 levitation-animate-3"
        alt="descripción de la imagen"
      />
      <img
        src="images/imageProfile.png"
        alt="Joel Viloria, Developer"
        class="fade-bottom md:mb-0 lg:absolute right-6 z-10 drop-shadow-2xl mb-16 w-[19rem] md:w-auto h-auto md:h-[80%] lg:h-[90%] order-2"
      />
    </div>
  </section>
</main>

<style>
  .levitation-animate-2 {
    animation: levitation 3.8s 2.5s ease-in-out infinite;
  }
  .levitation-animate-3 {
    animation: levitation 3.8s 1.5s ease-in-out infinite;
  }
  .levitation-animate {
    animation: levitation 3.8s ease-in-out infinite;
  }

  @keyframes levitation {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
    100% {
      transform: translateY(0);
    }
  }
</style>
